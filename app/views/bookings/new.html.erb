<h1>New booking:</h1>

<div class="row">
  <div class="col-sm-4 text-center">
    <%= cl_image_tag @toy.photo, height: 200, width: 300, crop: :fill %>
  </div>
  <div class="col-sm-4">
    <h4>category:</h4>
    <p> <%= @toy.category %> </p>
    <h4>Description:</h4>
    <p> <%= @toy.description %> </p>
  </div>
  <div class="col-sm-4">
    <h4>From the owner:</h4>
    <p> <%= @toy.owner.email %> </p>
    <h4>Price:</h4>
    <p> <%= @toy.price %> </p>
  </div>
</div>

<input type="text" data-provide='datepicker' >

<div class="row">
  <div class="col-sm-offset-2 col-sm-4 text-center">
    <%= simple_form_for [@toy, @booking] do |f| %>
      <%= f.input :date_start %>
  </div>
  <div class="col-sm-4 text-center">
      <%= f.input :date_end %>
  </div>
</div>
<div class="row">
  <div class="col-sm-offset-4 col-sm-4 text-center">
      <%= f.button :submit, class: "btn btn-primary" %>
      <%= link_to "Cancel", toy_path(@toy) %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>

<!-- col-sm-offset-2 col-sm-4 text-center -->
<!-- TEST - People card with Tabs -->
<div class="container">
  <div class="row">
    <div class="col-sm-offset-1 col-sm-10">
        <div class="card hovercard">
            <div class="card-background">
                <%= cl_image_tag @user.photo, class: "card-bkimg" %>
                <!-- http://lorempixel.com/850/280/people/9/ -->
            </div>
            <div class="useravatar">
                <!-- <img alt="" src="http://lorempixel.com/100/100/people/9/"> -->
                <%= cl_image_tag @user.photo %>
            </div>
            <div class="card-info">
              <span class="card-title"> <%= @user.f_name %> <%= @user.l_name %> </span>
            </div>
        </div>
        <div class="btn-pref btn-group btn-group-justified btn-group-lg" role="group" aria-label="...">
            <div class="btn-group" role="group">
                <button type="button" id="stars" class="btn btn-primary" href="#tab1" data-toggle="tab"><span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                    <div class="hidden-xs">My Bookings</div>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" id="favorites" class="btn btn-default" href="#tab2" data-toggle="tab"><span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
                    <div class="hidden-xs">My Inventory</div>
                </button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" id="following" class="btn btn-default" href="#tab3" data-toggle="tab"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                    <div class="hidden-xs">My Profile</div>
                </button>
            </div>
        </div>

            <div class="well">
          <div class="tab-content">
            <div class="tab-pane fade in active" id="tab1">
              <h4>My bookings:</h4>
              <ol>
                <% @bookings.each do |b| %>

                  <!-- if current user is the one who made a booking -->
                  <% borrower = b.user %>
                  <% if current_user == borrower %>
                    <li>
                      <%= link_to b.toy.name, toy_booking_path(b.toy, b) %>
                    </li>
                    <% if policy(b).edit? %>
                        <%= link_to "Edit", edit_toy_booking_path(b.toy, b), class: "btn btn-success" %>
                    <% end %>
                      <% if policy(b).destroy? %>
                        <%= link_to "Delete", toy_booking_path(b.toy, b), method: :delete, data:{confirm: "Are you sure?" }, class: "btn btn-danger" %>
                      <% end %>
                  <% end %>

                <% end %>
              </ol>


            </div>
            <div class="tab-pane fade in" id="tab2">
              <h4>Bookings for the toys I own:</h4>
              <%  %>
              <ol>
                <% @bookings.each do |b| %>
                  <!-- if current user is the owner of the toy -->
                  <% owner = b.toy.owner %>

                  <% if current_user == owner %>
                    <li>
                      <%= link_to b.toy.name, toy_booking_path(b.toy, b) %>
                    </li>
                    <% if policy(b).edit? %>
                        <%= link_to "Edit", edit_toy_booking_path(b.toy, b), class: "btn btn-success" %>
                    <% end %>
                    <% if policy(b).destroy? %>
                      <%= link_to "Delete", toy_booking_path(b.toy, b), method: :delete, data:{confirm: "Are you sure?" }, class: "btn btn-danger" %>
                    <% end %>
                  <% end %>

                <% end %>
              </ol>

            </div>
            <div class="tab-pane fade in" id="tab3">
              <p><strong>First name:</strong> <%= current_user.f_name %></p>
              <p><strong>Last name:</strong> <%= current_user.l_name %></p>
              <p><strong>Email:</strong> <%= current_user.email %></p>
              <p><strong>Address:</strong> <%= current_user.address %></p>
              <!-- add edit profile button -->
              <%= link_to "Edit", edit_user_registration_path(current_user) %>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>

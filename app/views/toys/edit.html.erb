<%= @toy.name %>

<div class="toy-form">
  <%= simple_form_for (@toy) do |f| %>
  <%= f.input :name, placeholder: "Toy name..." %>
  <%= f.input :description %>
  <%= f.input :category %>
  <%= f.input :price %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
  <%= f.button :submit, class: 'ButtonPinkNoFill' %>
  <% end  %>

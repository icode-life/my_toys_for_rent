<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @toy.name %>
</p>

<p>
  <strong>Detail:</strong>
  <%= @toy.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @toy.price %>
</p>

<p>
  <strong>Category:</strong>
  <%= @toy.category %>
</p>

<p>
  <strong>Photo:</strong>
  <%= cl_image_tag @toy.photo, width: 400, height: 300, crop: :fill %>
</p>

<td><%= link_to "Back to list", toys_path, class: "buttonMedium" %></td>

<td>
  <% if policy(@toy).edit? %>
  <%= link_to "Edit", edit_toy_path(@toy) %>
  <% end %>
</td>

<td>
  <% if policy(@toy).destroy? %>
  <%= link_to "Remove", toy_path(@toy), method: :delete, data:{confirm: "Are you sure?" } %>
  <% end %>
</td>

<%= link_to "Book this toy !", new_toy_booking_path(@toy), class: "buttonMedium" %>

<%= link_to "Add a rating !", new_toy_review_path(@toy), class: "buttonMedium" %>

<div class="list-group">
  <p> List of all the ratings: </p>
  <% @toy.reviews.each do |review| %>
  <small>
    <% count = 0 %>
    <% 5.times do %>
    <% if review.rating > count %>
    <i class="fas fa-star"></i>
    <% else %>
    <i class="far fa-star"></i>
    <% end %>
    <% count += 1 %>
    <% end %>
  </small>
  <p> <%= review.content %> </p>
  <% end %>
</div>

<!-- Slideshow Banner -->
<div id="myCarousel" class="carousel slide" data-ride="carousel">

  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>


  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag "logo1.jpg" %>
    </div>

    <div class="item">
      <%= image_tag "logo2.jpg" %>
    </div>

    <div class="item">
     <%= image_tag "logo3.jpg" %>
   </div>
 </div>


 <a class="left carousel-control" href="#myCarousel" data-slide="prev">
  <span class="glyphicon glyphicon-chevron-left"></span>
  <span class="sr-only">Previous</span>
</a>
<a class="right carousel-control" href="#myCarousel" data-slide="next">
  <span class="glyphicon glyphicon-chevron-right"></span>
  <span class="sr-only">Next</span>
</a>
</div>

<!-- the search -->
<div class="row">
  <div class="col-sm-offset-2 col-sm-8 text-center">
    <%= form_tag(toys_path, { method: :get, :class => 'form-inline'}) do %>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag ("search") %>
    <% end %>
  </div>
</div>

<!-- search by key-words -->
<div class>
  <h2> <%= link_to "Add a Toy", new_toy_path(@user), class: "a-primary" %> </h2>
</div>

<!-- creating the search with category -->


<!--include the listing of all the toys -->
<div class="container">
  <div class="row">
    <% @toys.each do |toy| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(toy.photo);">
        <div class="card-description">
          <h2><%= link_to toy.name, toy_path(toy) %></h2>
          <p><%= toy.price %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>



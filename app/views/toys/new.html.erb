<div class="toy-form">
  <%= simple_form_for (@toy) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.select(:category, options_for_select(
    [["For babies", "For babies"],
    ["Construction Games", "Construction games"],
    ["Babydoll", "Babydoll"],
    ["Heroes", "Heroes"],
    ["Puzzle", "Puzzle"]
    ])) %>
    <%= f.input :price %>
    <%= f.input :photo %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit, class: 'btn btn-primary' %>
    <% end  %>
</div>

